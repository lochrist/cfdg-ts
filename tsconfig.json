{
  "compilerOptions": {
    "target": "es6",
    "module": "amd",
    "sourceMap": true,
    "watch": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "baseUrl": "dist"
    // "allowJs": true
  },

  "types": [
    "jasmine",
    "lodash",
    "requirejs"
